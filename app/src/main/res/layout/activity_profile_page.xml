<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/profile_bg2"
    tools:context=".ProfilePage">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/profile_user_name"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginTop="16dp"
        android:text="profile_user_name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_edit" />

    <TextView
        android:id="@+id/profile_dog_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="profile_dog_name"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_user_name"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/profile_user_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_user_name" />

    <Switch
        android:id="@+id/dogisiter_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dogisiter?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.063" />

    <TextView
        android:id="@+id/profile_location"
        android:layout_width="266dp"
        android:layout_height="32dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ic_house"
        android:drawablePadding="10dp"
        android:text="profile_location"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_bio"
        app:layout_constraintStart_toStartOf="@+id/profile_bio"
        app:layout_constraintTop_toBottomOf="@+id/profile_bio" />

    <TextView
        android:id="@+id/profile_contact"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="36dp"
        android:drawableLeft="@drawable/ic_contact_mail"
        android:drawablePadding="10dp"
        android:text="profile_contact"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/profile_location"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/profile_location"
        app:layout_constraintTop_toBottomOf="@+id/profile_location" />

    <TextView
        android:id="@+id/profile_bio"
        android:layout_width="336dp"
        android:layout_height="61dp"
        android:layout_marginTop="28dp"
        android:text="profile_bio"
        app:layout_constraintEnd_toEndOf="@+id/profile_dog_name"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="@+id/profile_dog_name"
        app:layout_constraintTop_toBottomOf="@+id/profile_dog_name" />

    <TextView
        android:id="@+id/profile_to_my_markers"
        android:layout_width="159dp"
        android:layout_height="28dp"
        android:background="#FFEB3B"
        android:text="my markers"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/profile_contact"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/profile_contact"
        app:layout_constraintTop_toBottomOf="@+id/profile_contact"
        app:layout_constraintVertical_bias="0.618" />

    <TextView
        android:id="@+id/profile_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#FFEB3B"
        android:text="edit profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profile_image" />
</androidx.constraintlayout.widget.ConstraintLayout>